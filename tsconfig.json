{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ES2015",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "lib": ["DOM", "ES2019"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
} 